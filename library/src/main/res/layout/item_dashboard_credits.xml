<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="@dimen/cards_margin"
              android:paddingBottom="@dimen/cards_margin">

    <ImageView
            android:id="@+id/photo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/fabs_margin"
            android:layout_marginStart="@dimen/fabs_margin"
            android:scaleType="centerCrop"
            android:background="@color/amoled_bg"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

        <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fabs_margin"
                android:layout_marginLeft="@dimen/fabs_margin"
                android:layout_marginEnd="@dimen/fabs_margin"
                android:layout_marginRight="@dimen/fabs_margin"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Jahir Fiquitiva"/>

        <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="@dimen/fabs_margin"
                android:layout_marginLeft="@dimen/fabs_margin"
                android:layout_marginEnd="@dimen/fabs_margin"
                android:layout_marginRight="@dimen/fabs_margin"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end"
                tools:text="This is a description that took me so long to create I can't even stop typing."/>

        <jahirfiquitiva.libs.kauextensions.ui.layouts.SplitButtonsLayout
                android:id="@+id/buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="@dimen/fabs_margin"
                android:layout_marginRight="@dimen/fabs_margin"
                android:orientation="horizontal"/>

    </LinearLayout>

</LinearLayout>