<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom"
              android:background="@android:color/transparent">

    <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingTop="@dimen/cards_margin"
            android:paddingBottom="@dimen/cards_margin"
            android:paddingEnd="@dimen/cards_margin"
            android:paddingStart="@dimen/cards_margin">

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            <ImageView
                    android:id="@+id/download_button"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/cards_margin"
                    android:layout_marginTop="@dimen/cards_margin"
                    android:contentDescription="@string/download"
                    android:padding="@dimen/cards_margin"
                    app:srcCompat="@drawable/ic_download"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            <ImageView
                    android:id="@+id/apply_button"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/cards_margin"
                    android:layout_marginTop="@dimen/cards_margin"
                    android:contentDescription="@string/apply"
                    android:padding="@dimen/cards_margin"
                    app:srcCompat="@drawable/ic_apply_wallpaper"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/fav_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            <ImageView
                    android:id="@+id/fav_button"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/cards_margin"
                    android:layout_marginTop="@dimen/cards_margin"
                    android:contentDescription="@string/favorite"
                    android:padding="@dimen/cards_margin"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>