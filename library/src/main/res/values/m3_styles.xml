<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <style name="Frames.SplashScreen.MaterialYou" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>

        <item name="colorPrimary">@color/m3_primary</item>
        <item name="colorPrimaryDark">@color/m3_primaryDark</item>
        <item name="colorAccent">@color/m3_accent</item>

        <item name="colorPrimaryVariant">@color/m3_primaryDark</item>
        <item name="colorOnPrimary">@color/m3_onPrimary</item>

        <item name="colorSecondary">@color/m3_accent</item>
        <item name="colorSecondaryVariant">@color/m3_accent</item>
        <item name="colorOnSecondary">@color/m3_onAccent</item>

        <item name="colorSurface">@color/m3_surface</item>
        <item name="colorOnSurface">@color/m3_onSurface</item>
        <item name="colorOnSurfaceVariant">@color/m3_onSurfaceVariant</item>

        <item name="colorBackgroundFloating">@color/m3_background</item>
        <item name="colorOnBackground">@color/m3_onBackground</item>

        <item name="snackbarBackgroundColor">@color/m3_snackbarBackgroundColor</item>
        <item name="snackbarTextColor">@color/m3_snackbarTextColor</item>
        <item name="snackbarButtonColor">@color/m3_snackbarButtonColor</item>

        <item name="colorPrimaryContainer">@color/m3_accent</item>
        <item name="colorOnPrimaryContainer">@color/m3_onAccent</item>
        <item name="colorSecondaryContainer">@color/m3_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/m3_onSecondaryContainer</item>
        <item name="colorTertiaryContainer">@color/m3_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/m3_onTertiaryContainer</item>

        <item name="android:textColorPrimary">?colorOnSurface</item>

        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:navigationBarDividerColor">@color/transparent</item>
        <item name="android:colorEdgeEffect">?colorSecondary</item>

        <item name="customFontBold">@font/manrope_bold_fam</item>
        <item name="customFontNormal">@font/manrope_normal_fam</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>

        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:forceDarkAllowed">true</item>

        <item name="preferenceTheme">@style/Widget.Frames.PreferenceThemeOverlay.MaterialYou</item>
        <item name="popupMenuBackground">@drawable/menu_background</item>
    </style>

    <style name="Frames.SplashScreen.Amoled.MaterialYou" parent="Frames.SplashScreen.MaterialYou" />

    <style name="Frames.Default.MaterialYou" parent="Frames.SplashScreen.MaterialYou">
        <item name="android:windowBackground">@color/m3_background</item>

        <item name="textAppearanceHeadline3">@style/TextAppearance.Frames.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Frames.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Frames.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Frames.Headline6</item>

        <item name="textAppearanceSubtitle1">@style/TextAppearance.Frames.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Frames.Subtitle2</item>

        <item name="textAppearanceButton">@style/TextAppearance.Frames.Button</item>

        <item name="android:dialogTheme">@style/Frames.Dialogs.MaterialYou</item>
        <item name="android:alertDialogTheme">@style/Frames.Dialogs.MaterialYou</item>
        <item name="materialAlertDialogTheme">@style/Frames.Dialogs.MaterialYou</item>

        <item name="materialCardViewStyle">@style/Widget.Frames.MaterialCardView.MaterialYou</item>
        <item name="bottomSheetDialogTheme">@style/Frames.BottomSheetDialog.MaterialYou</item>
        <item name="navigationViewStyle">@style/Widget.Frames.NavigationView.MaterialYou</item>
        <item name="toolbarStyle">@style/Widget.Material3.Toolbar.Surface</item>
        <item name="bottomNavigationStyle">
            @style/Widget.Frames.BottomNavigationView.MaterialYou
        </item>

        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.Frames.SmallComponent.MaterialYou
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.Frames.MediumComponent.MaterialYou
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.Frames.LargeComponent.MaterialYou
        </item>
    </style>

    <style name="Frames.Default.Amoled.MaterialYou" parent="Frames.Default.MaterialYou" />

    <style name="Widget.Frames.BottomNavigationView.MaterialYou.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/m3_bottomNavActiveIndicator</item>
    </style>

    <style name="Widget.Frames.BottomNavigationView.MaterialYou" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_navigation_states</item>
        <item name="itemTextColor">@drawable/bottom_navigation_states</item>
        <item name="itemActiveIndicatorStyle">
            @style/Widget.Frames.BottomNavigationView.MaterialYou.ActiveIndicator
        </item>
    </style>

    <style name="Widget.Frames.ViewerBottomNavigationView.MaterialYou" parent="Widget.Frames.BottomNavigationView">
        <item name="itemRippleColor">@color/viewer_item_ripple</item>
        <item name="itemIconTint">@drawable/bottom_actions_states</item>
        <item name="itemTextColor">@drawable/bottom_actions_states</item>
    </style>

    <!-- Bottom Sheet Dialogs -->
    <style name="Frames.BottomSheetDialog.MaterialYou" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Frames.BottomSheet.Modal.Animation</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="bottomSheetStyle">@style/Frames.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:navigationBarDividerColor">@color/transparent</item>
    </style>

    <style name="Frames.BottomSheet.Modal.MaterialYou" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearance">?shapeAppearanceLargeComponent</item>
    </style>

    <style name="Frames.BottomSheet.Modal.Animation.MaterialYou" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_slide_out</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.Frames.NavigationView.MaterialYou" parent="Widget.Material3.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
    </style>

    <style name="Widget.Frames.TextButton.MaterialYou" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="backgroundTint">@color/text_btn_bg_color</item>
        <item name="rippleColor">@color/text_btn_ripple_color</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="Widget.Frames.ColoredButton.MaterialYou" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/colored_btn_bg_color</item>
        <item name="rippleColor">@color/colored_btn_ripple_color</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="Widget.Frames.SurfaceButton.MaterialYou" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/surface_btn_bg_color</item>
        <item name="rippleColor">@color/surface_btn_ripple_color</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Widget.Frames.PreferenceThemeOverlay.MaterialYou" parent="@style/PreferenceThemeOverlay">
        <item name="switchPreferenceCompatStyle">@style/Widget.Frames.SwitchPreference.MaterialYou</item>
    </style>

    <style name="Widget.Frames.SwitchPreference.MaterialYou" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="widgetLayout">@layout/widget_material_switch</item>
        <item name="trackTint">@color/md3_switch_track_tint</item>
        <item name="thumbTint">@color/md3_switch_thumb_tint</item>
        <item name="trackDecorationTint">@color/md3_switch_outline_tint</item>
    </style>

</resources>
